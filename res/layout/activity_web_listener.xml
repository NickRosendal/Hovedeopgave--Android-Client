<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WebListener" >

      <com.example.Mjpeg.MjpegView
          android:id="@+id/mv"
          android:layout_width="fill_parent"
          android:layout_height="200dip"
          android:layout_alignParentTop="true"
          android:layout_weight="0.17" />

      <Button
          android:id="@+id/debugButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/mv"
          android:layout_alignRight="@+id/mv"
          android:layout_below="@+id/mv"
          android:text="debug" />

      <TextView
          android:id="@+id/textName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/debugButton"
          android:layout_alignRight="@+id/debugButton"
          android:layout_below="@+id/debugButton"
          android:text="Kim Lindhard" />

      <TextView
          android:id="@+id/textBirthday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textName"
          android:layout_alignRight="@+id/textName"
          android:layout_below="@+id/textName"
          android:text="Kim Lindhard" />

      <TextView
          android:id="@+id/textZip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textBirthday"
          android:layout_alignRight="@+id/textName"
          android:layout_below="@+id/textBirthday"
          android:text="Kim Lindhard" />

      <TextView
          android:id="@+id/textLastVisit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textStatus"
          android:layout_alignRight="@+id/textZip"
          android:layout_below="@+id/textZip"
          android:text="Kim Lindhard" />

      <TextView
          android:id="@+id/textStatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textZip"
          android:layout_below="@+id/textLastVisit"
          android:layout_marginTop="18dp"
          android:text="BANNED HURRA" />

      <TextView
          android:id="@+id/textGender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/textLastVisit"
          android:layout_alignRight="@+id/textLastVisit"
          android:layout_below="@+id/textLastVisit"
          android:text="monkey!" />
    
</RelativeLayout>