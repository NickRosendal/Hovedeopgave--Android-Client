<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WebListener" >

    <com.example.Mjpeg.MjpegView
        android:id="@+id/mv"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/debugButton"
        android:layout_weight="0.17" />

    <ImageView
        android:id="@+id/imageV"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/debugButton"
        android:layout_weight="0.17" />

    <Button
        android:id="@+id/debugButton"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mv"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mv"
        android:text=" " />

    <TableLayout
        android:id="@+id/tableLayoutForEvents"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignRight="@+id/debugButton"
        android:layout_below="@+id/mv"
        android:layout_toRightOf="@+id/relativeLayout1" >

    </TableLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableLayoutForEvents"
        android:layout_alignLeft="@+id/mv"
        android:layout_alignTop="@+id/tableLayoutForEvents" >

        <Button
            android:id="@+id/buttonNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Night" />

        <Button
            android:id="@+id/ButtonForSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonNight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Search" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Kim Lindhard" />

        <TextView
            android:id="@+id/textBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textName"
            android:text="Kim Lindhard" />

        <TextView
            android:id="@+id/textZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textBirthday"
            android:text="Kim Lindhard" />

        <TextView
            android:id="@+id/textGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/ButtonSearch"
            android:layout_below="@+id/textZip"
            android:text="monkey!" />

    </RelativeLayout>

</RelativeLayout>